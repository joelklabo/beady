{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "sourceMap": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@commands/*": [
        "src/commands/*"
      ],
      "@providers/*": [
        "src/providers/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@worktree": [
        "src/worktree"
      ],
      "@worktree/*": [
        "src/worktree/*"
      ],
      "@ai/*": [
        "src/ai/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@beads/core": [
        "packages/core/src"
      ],
      "@beads/core/*": [
        "packages/core/src/*"
      ]
    }
  }
}
